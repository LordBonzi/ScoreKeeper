<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="sds2001"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lead Developer of SDS-Studios and Score Keeper."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerColor"
        android:layout_below="@+id/sethGoogleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Built the website and helped along the way by suggesting improvements to the app."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alfster2012"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_plus_signin_btn_icon_dark"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/sethGoogleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Github"
        android:id="@+id/sethGithubButton"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/sethGoogleButton"
        android:layout_toEndOf="@+id/sethGoogleButton"
/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/sethEmailButton"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/sethGithubButton"
        android:layout_toEndOf="@+id/sethGithubButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/alfieEmailButton"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/alfieGithubButton"
        android:layout_toEndOf="@+id/alfieGithubButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:id="@+id/alfieWebsiteButton"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/alfieEmailButton"
        android:layout_toEndOf="@+id/alfieEmailButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Github"
        android:id="@+id/alfieGithubButton"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/sethGithubButton"
        android:layout_alignStart="@+id/sethGithubButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_plus_signin_btn_icon_dark"
        android:id="@+id/alfieGoogleButton"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>