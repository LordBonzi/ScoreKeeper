<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="io.github.sdsstudios.ScoreKeeper.GameActivity">
    <RelativeLayout
        android:id="@+id/gameRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adViewHome"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:id="@+id/layoutBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:visibility="visible"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bigGameList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/stopWatchLayout"
            android:layout_toStartOf="@+id/stopWatchLayout" />

        <RelativeLayout
            android:id="@+id/stopWatchLayout"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <android.support.v7.widget.CardView
                android:id="@+id/buttonChronometerBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/stopwatch_margin_bottom"
                android:clickable="true"
                android:focusableInTouchMode="true">

                <io.github.sdsstudios.ScoreKeeper.Stopwatch
                    android:id="@+id/chronometerBig"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/fabChronometer"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingEnd="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabChronometerBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonChronometerBig"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="98dp"
                android:layout_marginStart="98dp"
                android:clickable="true"
                app:fabSize="normal" />



        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewP2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonP2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/buttonP2"
            android:layout_below="@+id/buttonP2"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Seth"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textViewP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonP1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonP1"
            android:layout_below="@+id/buttonP1"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Alfie"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/buttonP2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?attr/buttonBackground"
            android:gravity="center"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <Button
            android:id="@+id/buttonP1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/buttonBackground"
            android:gravity="center"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <ImageButton
            android:id="@+id/buttonEditP1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/buttonP1"
            android:layout_toRightOf="@+id/buttonP1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/ic_create_black_24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:tint="@color/textColor" />

        <ImageButton
            android:id="@+id/buttonEditP2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/buttonP2"
            android:layout_toStartOf="@+id/buttonP2"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/ic_create_black_24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:tint="@color/textColor" />

        <android.support.v7.widget.CardView
            android:id="@+id/buttonChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/stopwatch_margin_bottom"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2">

            <io.github.sdsstudios.ScoreKeeper.Stopwatch
                android:id="@+id/chronometer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fabChronometer"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonChronometer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:fabSize="normal" />

    </RelativeLayout>
</RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHome"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <GridView
        android:id="@+id/setGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adViewHome"
        android:visibility="gone"/>

</RelativeLayout>


