<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>

        <item name="textColor">@color/textColor</item>
        <item name="dividerColor">@color/divider</item>
        <item name="itemBackgroundColor">@color/light_item_background</item>
        <item name="multiSelectBackground">@color/multiselect</item>
        <item name="buttonBackground">@color/button_background</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="dividerColor">@color/dividerDark</item>
        <item name="itemBackgroundColor">@color/dark_item_background</item>
        <item name="multiSelectBackground">@color/darkmultiselect</item>
        <item name="textColor">@color/darkTextColor</item>
        <item name="buttonBackground">@color/dark_button_background</item>

    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/material_dark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/material_dark</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="colorPrimaryDark">@color/material_dark</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:background">@drawable/splashscreen</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">30dp</item>

    </style>

    <style name="LargeText">
        <item name="android:textSize">112sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="AppTheme.SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextStyle">@color/colorTitleText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="AppTheme.SettingsTheme.Toolbar" parent="AppTheme.SettingsTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
