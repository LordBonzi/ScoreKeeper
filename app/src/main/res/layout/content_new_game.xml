<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.sdsstudios.ScoreKeeper.NewGame">

    <RelativeLayout
        android:id="@+id/newGameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomGame"
            android:layout_below="@+id/relativeLayoutPresets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
        android:id="@+id/editTextPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/player_s_name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonAddPlayer"
        android:layout_toStartOf="@+id/buttonAddPlayer" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/relativeLayoutSpinner"
        android:layout_below="@+id/buttonAddPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/time_limit"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

        <Button
        android:id="@+id/buttonAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_player"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="?attr/colorAccent"
        android:layout_alignBaseline="@+id/editTextPlayer"
        android:layout_alignBottom="@+id/editTextPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:id="@+id/spinnerTimeLimit"
        android:layout_below="@+id/relativeLayoutSpinner"
        android:layout_toEndOf="@+id/checkBoxNoTimeLimit"
        android:layout_toRightOf="@+id/checkBoxNoTimeLimit" />

        <CheckBox
        android:id="@+id/checkBoxNoTimeLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_time_limit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/relativeLayoutSpinner"
        android:layout_alignLeft="@+id/editTextPlayer"
        android:layout_alignStart="@+id/editTextPlayer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/relativeLayoutPlayers"
            android:layout_below="@+id/checkBoxNoTimeLimit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerColor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="@string/players"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/playerList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutPlayers"
            android:layout_alignLeft="@+id/checkBoxNoTimeLimit"
            android:layout_alignStart="@+id/checkBoxNoTimeLimit"
            android:layout_alignRight="@+id/buttonAddPlayer"
            android:layout_alignEnd="@+id/buttonAddPlayer"
            android:layout_marginBottom="48dp"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"
            android:id="@+id/view2"
            android:layout_alignTop="@+id/buttonAddPlayer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutPresets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/presetTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="@string/preset_title"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/spinnerPreset"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/presetTitleLayout"
                android:layout_toLeftOf="@+id/buttonCreatePreset" />


            <Button
                android:id="@+id/buttonCreatePreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_preset"
                android:visibility="visible"
                android:textColor="?attr/colorAccent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/presetTitleLayout"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/itemBackgroundColor"
            android:layout_height="48sp"
            android:layout_above="@+id/adViewHome"
            android:id="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerColor"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view" />

            <Button
                android:id="@+id/buttonNewGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16sp"
                android:layout_marginEnd="16sp"
                android:drawablePadding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/stepper_right"
                android:drawableEnd="@drawable/stepper_right"
                android:paddingLeft="5sp"
                android:paddingStart="5sp"
                android:paddingRight="5sp"
                android:paddingEnd="5sp"
                android:text="@string/start_game"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonQuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/stepper_left"
                android:drawableStart="@drawable/stepper_left"
                android:paddingLeft="5sp"
                android:paddingStart="5sp"
                android:paddingRight="5sp"
                android:paddingEnd="5sp"
                android:text="@string/quit"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewHome"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id" />
    </RelativeLayout>

</ScrollView>
