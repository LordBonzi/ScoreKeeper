<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingTop="4dp"
    tools:context="io.github.sdsstudios.ScoreKeeper.MainActivity">

    <RelativeLayout
        android:id="@+id/layoutBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewHome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bigGameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/adViewHome2"
            android:layout_toLeftOf="@+id/stopWatchLayout"
            android:layout_toStartOf="@+id/stopWatchLayout" />

        <RelativeLayout
            android:layout_width="530dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/stopWatchLayout"
            android:layout_above="@id/adViewHome2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <android.support.v7.widget.CardView
                android:layout_width="530dp"
                android:layout_height="140dp"
                android:clickable="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:focusableInTouchMode="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/buttonChronometerBig"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <io.github.sdsstudios.ScoreKeeper.Stopwatch
                    android:id="@+id/chronometerBig"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingRight="16dp"
                    android:paddingEnd="16dp"
                    android:layout_below="@+id/buttonChronometerBig"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal"
                android:layout_below="@+id/buttonChronometerBig"
                android:layout_centerHorizontal="true"
                android:id="@+id/fabChronometerBig"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="98dp"
                android:layout_marginStart="98dp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewP2"
            android:layout_width="150dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonP2"
            android:gravity="center"
            android:maxLines="1"
            android:text="Seth"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/buttonP2"
            android:layout_alignStart="@+id/buttonP2" />

        <TextView
            android:id="@+id/textViewP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonP1"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Alfie"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignRight="@+id/buttonP1"
            android:layout_alignEnd="@+id/buttonP1" />

        <Button
            android:id="@+id/buttonP2"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:background="?attr/buttonBackground"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

        <Button
            android:id="@+id/buttonP1"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:background="?attr/buttonBackground"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

        <ImageButton
            android:id="@+id/buttonEditP1"
            android:layout_width="30dp"
            android:background="?attr/selectableItemBackground"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@mipmap/ic_create_black_24dp"
            android:tint="@color/textColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonP1"
            android:layout_toEndOf="@+id/buttonP1" />

        <ImageButton
            android:id="@+id/buttonEditP2"
            android:layout_width="30dp"
            android:background="?attr/selectableItemBackground"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:src="@mipmap/ic_create_black_24dp"
            android:tint="@color/textColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonP2"
            android:layout_toStartOf="@+id/buttonP2" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewHome"
            android:layout_width="320dp"
            android:layout_height="50dp"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.CardView
            android:layout_width="530dp"
            android:layout_height="140dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/buttonChronometer"
            android:layout_above="@+id/adViewHome"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true">

            <io.github.sdsstudios.ScoreKeeper.Stopwatch
                android:id="@+id/chronometer"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:paddingRight="12dp"
                android:paddingEnd="12dp"
                android:layout_below="@+id/fabChronometer"
                android:layout_centerHorizontal="true" />
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            android:layout_marginBottom="16dp"
            android:id="@+id/fabChronometer"
            android:layout_above="@+id/buttonChronometer"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>


