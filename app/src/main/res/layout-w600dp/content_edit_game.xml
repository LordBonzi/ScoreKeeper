<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.sdsstudios.ScoreKeeper.EditGame"
    tools:showIn="@layout/activity_edit_game">

    <RelativeLayout
        android:id="@+id/layoutEditGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/cardViewDate"
            android:layout_toLeftOf="@+id/cardViewAd"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageButton
                    android:id="@+id/buttonHelpDate"
                    android:layout_width="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:clickable="true"
                    android:src="@mipmap/ic_help_black_18dp"
                    android:tint="@color/textColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="24dp"
                    android:layout_height="wrap_content"
                    android:inputType="datetime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_below="@+id/buttonHelpDate"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp"/>

                <TextView
                    android:text="@string/date_and_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:id="@+id/textView3"
                    android:layout_above="@+id/editTextDate"
                    android:layout_alignLeft="@+id/editTextDate"
                    android:layout_alignStart="@+id/editTextDate" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/cardViewLength"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:id="@+id/buttonHelpLength"
                    android:layout_width="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@mipmap/ic_help_black_18dp"
                    android:tint="@color/textColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:layout_toRightOf="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6" />

                <TextView
                    android:text="@string/length"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:layout_alignLeft="@+id/editTextLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:id="@+id/editTextLength"
                    android:layout_marginBottom="24dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_below="@+id/textView6"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/cardViewOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewAd"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/cardViewDate"
            android:layout_toRightOf="@+id/cardViewDate">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_height="48dp"
                    android:id="@+id/optionsHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="@string/advanced_options"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutOptions"
                    android:layout_below="@+id/optionsHeader"
                    >
                    <EditText
                        android:id="@+id/editTextMaxScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/max_score"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberSigned"
                        android:layout_marginLeft="16dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/editTextScoreInterval"
                        android:layout_alignEnd="@+id/editTextScoreInterval" />

                    <EditText
                        android:id="@+id/editTextScoreInterval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/score_interval"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:layout_below="@+id/editTextMaxScore"
                        android:layout_marginLeft="16dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingRight="16dp"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:id="@+id/editTextDiffToWin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/diff_to_win"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberSigned"
                        android:paddingRight="16dp"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_below="@+id/editTextScoreInterval"
                        android:layout_alignLeft="@+id/editTextScoreInterval"
                        android:layout_alignStart="@+id/editTextScoreInterval"
                        android:layout_alignRight="@+id/editTextScoreInterval"
                        android:layout_alignEnd="@+id/editTextScoreInterval" />

                    <EditText
                        android:id="@+id/editTextNumSets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/num_sets"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberSigned"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_below="@+id/editTextDiffToWin"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/editTextScoreInterval"
                        android:layout_alignEnd="@+id/editTextScoreInterval" />

                    <CheckBox
                        android:id="@+id/checkBoxReverseScoring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reverse_scoring"
                        android:layout_below="@+id/editTextNumSets"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_alignLeft="@+id/editTextDiffToWin"
                        android:layout_alignStart="@+id/editTextDiffToWin" />

                    <CheckBox
                        android:id="@+id/checkBoxStopwatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stopwatch"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_below="@+id/checkBoxReverseScoring"
                        android:layout_alignLeft="@+id/checkBoxReverseScoring"
                        android:layout_alignStart="@+id/checkBoxReverseScoring" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/cardViewPlayerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewLength"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignRight="@+id/cardViewDate"
            android:layout_alignEnd="@+id/cardViewDate"
            android:layout_alignBottom="@+id/cardViewOptions">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewEditGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/textView4" />


                <TextView
                    android:text="@string/players_and_scores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:id="@+id/textView4" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            ads:cardCornerRadius="4dp"
            android:id="@+id/cardViewAd"
            android:layout_width="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewLength"
            android:layout_alignRight="@+id/cardViewLength"
            android:layout_alignEnd="@+id/cardViewLength"
            android:layout_alignLeft="@+id/cardViewLength"
            android:layout_alignStart="@+id/cardViewLength">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewHome"
                android:layout_width="320dp"
                android:layout_height="50dp"
                ads:adSize="BANNER"
                android:layout_gravity="center"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_below="@+id/cardViewLength"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            ads:cardCornerRadius="4dp"
            android:id="@+id/cardViewAd2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/cardViewOptions"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewHome2"
                android:layout_width="320dp"
                android:layout_height="50dp"
                ads:adSize="BANNER"
                android:layout_gravity="center"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_below="@+id/cardViewOptions"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
